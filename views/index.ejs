      <section>
        <form action="/" method="POST">
          <fieldset>
            <legend>jURL</legend>
            <label for="url_input">URL:</label>
            <input id="url_input" type="text" name="url" 
            placeholder="https://www.youtube.com/watch?v=yFpUmuY6eGs" />
            <input type="submit" value="Better URL" />
          </fieldset>
        </form>
      </section>
