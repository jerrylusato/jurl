<!DOCTYPE html>

<html>

<head>
  <title>jURL | Better URL</title>
  <link rel="icon" type="image/png" href="https://cdn.freecodecamp.org/universal/favicons/favicon-16x16.png" />
  <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
  <h3>Shortened/masked URL</h3>
  <main>
    <section>
      <div class="content-box">
        <label for="new-url">Better URL:</label>
        <input id="new-url" type="text" value=<%=newUrl %> />
        <input type="submit" value="Copy URL" onclick="copyToClipboard()" />
      </div>
    </section>
  </main>
  <footer>
    <div>
      <span>&#9996;&#65039;</span>
      <a href="https://twitter.com/jerrylusato" target="_blank">Jerry</a>
    </div>
  </footer>

  <script>
    const copyToClipboard = () => {
      const copyText = document.getElementById("new-url");

      /* Select the text field */
      copyText.select();
      copyText.setSelectionRange(0, 99999); /* For mobile devices */

      /* Copy the text inside the text field */
      document.execCommand("copy");
    }
  </script>

</body>

</html>